include("stdtest.ph");

func main()
{
    var a = 10;
    var b = &a;
    var c:ref ptr std.int = b;

    test.assert(a == 10);
    test.assert(*b == 10);
    test.assert(*c == 10);

    (*b) = 20;

    test.assert(a == 20);
    test.assert(*b == 20);
    test.assert(*c == 20);

    (*c) = 30;

    test.assert(a == 30);
    test.assert(*b == 30);
    test.assert(*c == 30);
}
