include("stdtest.ph");

var a = 123;

func x():ref std.int
{
    return a;
}

class foo
{
    var x:std.int;
}

func y(a:ref foo):ref foo
{
    return a;
}

func main()
{
    test.assert(x() == 123);

    a = 321;
    test.assert(x() == 321);

    x() = 999;
    test.assert(a == 999);

    var f:foo;
    f.x = 765;

    test.assert(y(f).x == 765);
}
