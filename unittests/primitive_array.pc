include "stdtest.pc";

func main()
{
    var a:std.int[2];

    a[0] = 123;
    *(a + 1) = 321;

    test.assert(*a == 123);
    test.assert(a[1] == 321);

    var x = 10;
    var y = 20;

    var p:ptr std.int[2];

    p[0] = &x;
    p[1] = &y;

    test.assert(*(p[0]) == 10);
    test.assert(*(p[1]) == 20);
}
